<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    tools:targetApi="s">

    <Button
        android:background="#00000000"
        android:id="@+id/btn_pub_finish"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:text="@string/exit"
        android:textColor="#B71C1C"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit_payload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:selectAllOnFocus="true"
        android:text="@string/pub_payload"
        android:hint="@string/pub_payload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,MissingConstraints"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edit_pub_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/topic"
        android:hint="@string/topic"
        app:layout_constraintTop_toBottomOf="@id/edit_payload"
        tools:ignore="LabelFor,MissingConstraints"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/btn_pub_confirm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:text="@string/confirm"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/edit_pub_topic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="64dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>